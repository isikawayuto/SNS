{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault":true
            },
            "command": "${config:python.pythonPath}",
            "args": ["\"${file}\""], 
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
            },
            "problemMatcher": []
        }
    ],
}